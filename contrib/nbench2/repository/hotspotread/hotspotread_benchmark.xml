<?xml version="1.0" encoding="UTF-8"?>
<benchmark name="HotSpotRead">
	<transaction-frame>
		<frame name="Select_Article_Info_And_Update_Read_Counter" impl="impl_1">
			<input-map>
				<map name="article_id" type="INTEGER" />
			</input-map>
			<output-map>
				<map name="BOARD_ID" type="INTEGER" />
				<map name="ARTICLE_ID" type="INTEGER" />
				<map name="ARTICLE_NO" type="INTEGER" />
				<map name="REPLY_NO_SEQ" type="STRING" />
				<map name="REPLY_DEPTH" type="INTEGER" />
				<map name="ARTICLE_TITLE" type="STRING" />
				<map name="ARTICLE_TYPE" type="STRING" />
				<map name="ARTICLE_CATEGORY" type="INTEGER" />
				<map name="WRITER_ID" type="STRING" />
				<map name="WRITER_NICKNAME" type="STRING" />
				<map name="WRITER_INFO" type="STRING" />
				<map name="POSTED_TIME" type="TIMESTAMP" />
				<map name="HAS_ATTACHMENTS" type="STRING" />
				<map name="READ_COUNTER" type="INTEGER" />
				<map name="RECOMMENDED_COUNTER" type="INTEGER" />
				<map name="COMMENT_COUNTER" type="INTEGER" />
				<map name="SCRAP_COUNTER" type="INTEGER" />
			</output-map>
		</frame>

		<frame name="Select_Content" impl="impl_2">
			<input-map>
				<map name="article_id" type="INTEGER" />
			</input-map>
			<output-map>
				<map name="CONTENT" type="STRING" />
			</output-map>
		</frame>

		<frame name="Select_Attachment_List" impl="impl_3">
			<input-map>
				<map name="article_id" type="INTEGER" />
			</input-map>
			<output-map>
				<map name="ATTACHMENT_NO" type="INTEGER" />
				<map name="ATTACHMENT_NAME" type="STRING" />
				<map name="ATTACHMENT_TYPE" type="STRING" />
				<map name="ATTACHMENT" type="STRING" />
				<map name="ATTACHMENT_SIZE" type="INTEGER" />
			</output-map>
		</frame>

		<frame name="Select_Comment_List" impl="impl_4">
			<input-map>
				<map name="article_id" type="INTEGER" />
			</input-map>
			<output-map>
				<map name="COMMENT_NO" type="INTEGER" />
				<map name="COMMENT_TEXT" type="STRING" />
				<map name="COMMENT_STATUS" type="STRING" />
				<map name="WRITER_ID" type="STRING" />
				<map name="WRITER_NICKNAME" type="STRING" />
				<map name="POSTED_TIME" type="TIMESTAMP" />
				<map name="RECOMMENDED_COUNTER" type="INTEGER" />
			</output-map>
		</frame>

		<frame name="Select_Before_And_After_Article_Info" impl="impl_5">
			<input-map>
				<map name="board_id" type="INTEGER" />
				<map name="article_no" type="INTEGER" />
				<map name="article_category" type="INTEGER" />
			</input-map>
			<output-map>
				<map name="ARTICLE_ID" type="INTEGER" />
				<map name="ARTICLE_NO" type="INTEGER" />
				<map name="REPLY_NO_SEQ" type="STRING" />
				<map name="REPLY_DEPTH" type="INTEGER" />
				<map name="ARTICLE_TITLE" type="STRING" />
				<map name="PREVIEW_TEXT" type="STRING" />
				<map name="THUMBNAIL_IMAGE" type="STRING" />
				<map name="ARTICLE_TYPE" type="STRING" />
				<map name="ARTICLE_CATEGORY" type="INTEGER" />
				<map name="ARTICLE_STATUS" type="STRING" />
				<map name="WRITER_ID" type="STRING" />
				<map name="WRITER_NICKNAME" type="STRING" />
				<map name="POSTED_TIME" type="TIMESTAMP" />
				<map name="HAS_ATTACHMENTS" type="STRING" />
				<map name="IS_SCRAPED" type="STRING" />
				<map name="IS_POPULAR" type="STRING" />
				<map name="READ_COUNTER" type="INTEGER" />
				<map name="RECOMMENDED_COUNTER" type="INTEGER" />
				<map name="COMMENT_COUNTER" type="INTEGER" />
				<map name="SCRAP_COUNTER" type="INTEGER" />
			</output-map>
		</frame>

		<frame name="Select_Reply_Articles_Info" impl="impl_6">
			<input-map>
				<map name="board_id" type="INTEGER" />
				<map name="article_no" type="INTEGER" />
				<map name="reply_no_seq" type="STRING" />
				<map name="reply_depth" type="INTEGER" />
				<map name="article_category" type="INTEGER" />
			</input-map>
			<output-map>
				<map name="REPLY_NO_SEQ" type="STRING" />
				<map name="REPLY_DEPTH" type="INTEGER" />
				<map name="ARTICLE_TITLE" type="STRING" />
				<map name="PREVIEW_TEXT" type="STRING" />
				<map name="THUMBNAIL_IMAGE" type="STRING" />
				<map name="ARTICLE_TYPE" type="STRING" />
				<map name="ARTICLE_CATEGORY" type="INTEGER" />
				<map name="ARTICLE_STATUS" type="STRING" />
				<map name="WRITER_ID" type="STRING" />
				<map name="WRITER_NICKNAME" type="STRING" />
				<map name="POSTED_TIME" type="TIMESTAMP" />
				<map name="HAS_ATTACHMENTS" type="STRING" />
				<map name="IS_SCRAPED" type="STRING" />
				<map name="IS_POPULAR" type="STRING" />
				<map name="READ_COUNTER" type="INTEGER" />
				<map name="RECOMMENDED_COUNTER" type="INTEGER" />
				<map name="COMMENT_COUNTER" type="INTEGER" />
				<map name="SCRAP_COUNTER" type="INTEGER" />
			</output-map>
		</frame>

		<frame name="Select_Count_Board" impl="impl_7">
			<input-map>
				<map name="board_id_lv" type="INTEGER" />
				<map name="article_category_lv" type="INTEGER" />
			</input-map>
			<output-map>
				<map name="COUNT_ALL" type="INTEGER" />
			</output-map>
		</frame>

		<frame name="Select_List_Page_By_Posted_Time" impl="impl_8">
			<input-map>
				<map name="board_id" type="INTEGER" />
				<map name="article_category" type="INTEGER" />
				<map name="page_start_no" type="INTEGER" />
				<map name="page_end_no" type="INTEGER" />
			</input-map>
			<output-map>
				<map name="ARTICLE_ID" type="INTEGER" />
				<map name="ARTICLE_NO" type="INTEGER" />
				<map name="REPLY_NO_SEQ" type="STRING" />
				<map name="REPLY_DEPTH" type="INTEGER" />
				<map name="ARTICLE_TITLE" type="STRING" />
				<map name="PREVIEW_TEXT" type="STRING" />
				<map name="THUMBNAIL_IMAGE" type="STRING" />
				<map name="ARTICLE_TYPE" type="STRING" />
				<map name="ARTICLE_CATEGORY" type="INTEGER" />
				<map name="WRITER_ID" type="STRING" />
				<map name="WRITER_NICKNAME" type="STRING" />
				<map name="WRITER_INFO" type="STRING" />
				<map name="POSTED_TIME" type="TIMESTAMP" />
				<map name="HAS_ATTACHMENTS" type="STRING" />
				<map name="IS_SCRAPED" type="STRING" />
				<map name="IS_POPULAR" type="STRING" />
				<map name="READ_COUNTER" type="INTEGER" />
				<map name="RECOMMENDED_COUNTER" type="INTEGER" />
				<map name="COMMENT_COUNTER" type="INTEGER" />
				<map name="SCRAP_COUNTER" type="INTEGER" />
			</output-map>
		</frame>
	</transaction-frame>

	<sample-space>
		<sample name="ARTICLE_ID" elem-type="INTEGER" type="round" 
			value="15871,16406,26764,64237,71673,71800,84079" />
	</sample-space>

	<transaction-definition>
		<transaction name="tr1" sla="300">
			out =
			Frame.Select_Article_Info_And_Update_Read_Counter(Sample.ARTICLE_ID.nextValue());
			Frame.Select_Content(out.ARTICLE_ID);
			Frame.Select_Attachment_List(out.ARTICLE_ID);
			if(out.COMMENT_COUNTER &gt; 1) {
			Frame.Select_Comment_List(out.ARTICLE_ID);
		}
		Frame.Select_Before_And_After_Article_Info(out.BOARD_ID, out.ARTICLE_NO, 
			out.ARTICLE_CATEGORY);
		Frame.Select_Reply_Articles_Info(out.BOARD_ID, out.ARTICLE_NO, out.REPLY_NO_SEQ, 
			out.REPLY_DEPTH, out.ARTICLE_CATEGORY);
	</transaction>

	<transaction name="tr2" sla="300">
		out = Frame.Select_Article_Info_And_Update_Read_Counter(Sample.ARTICLE_ID.nextValue());
		Frame.Select_Content(out.ARTICLE_ID);
		Frame.Select_Attachment_List(out.ARTICLE_ID);
		if(out.COMMENT_COUNTER &gt; 1) {
			Frame.Select_Comment_List(out.ARTICLE_ID);
		}
		Frame.Select_Before_And_After_Article_Info(out.BOARD_ID, out.ARTICLE_NO, 
			out.ARTICLE_CATEGORY);
		Frame.Select_Reply_Articles_Info(out.BOARD_ID, out.ARTICLE_NO, out.REPLY_NO_SEQ, 
			out.REPLY_DEPTH, out.ARTICLE_CATEGORY);
		Frame.Select_Count_Board(out.BOARD_ID, 2);
		Frame.Select_List_Page_By_Posted_Time(out.BOARD_ID, out.ARTICLE_CATEGORY, 0, 20);
	</transaction>

	<transaction name="tr3" sla="300">
		Frame.Select_Count_Board(1, 2);
		Frame.Select_List_Page_By_Posted_Time(1, 2, 0, 20);
	</transaction>
</transaction-definition>

<transaction-mix>
	<!-- type : ratio, count -->
	<mix name="mix1" nthread="1" target="tr1:tr2:tr3" type="ratio" value="7:2:1" think-time="5:5:50" />
</transaction-mix>
</benchmark>




