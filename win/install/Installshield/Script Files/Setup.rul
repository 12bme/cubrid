	    if (nResult = BACK) then
        	goto Dlg_SdLicense;
        endif;

	    FeatureCompareSizeRequired(MEDIA,TARGETDIR,nvSize);

	    if (nvSize != 0) then
         	MessageBox( szSdStr_NotEnoughSpace, WARNING );
	        goto Dlg_SetupType;
        endif;
    endif;

    if (nSetupType = "ALL") then
    	if ( nvCodePage = 949 ) then
    		szSummaryMsg = "설치타입: 큐브리드 서버 컴포넌트와 클라이언트 컴포넌트";
