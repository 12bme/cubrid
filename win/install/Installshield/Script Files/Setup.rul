		ordblist_txt = TARGETDIR^"CUBRID_DATABASES\\ordblist.txt";
		LongPathToQuote(ordblist_txt, TRUE);
		nResult = Is (FILE_EXISTS, ordblist_txt);
		if (nResult = TRUE) then
			cp_old_dbtxt = TRUE;
		endif;
	endif;

    // setup default status
    SetStatusWindow(0, "");
    Enable(STATUSEX);
    StatusUpdate(ON, 100);

    return 0;
end;

